<body bgcolor="white" text="black">

  <h1 align="center">メディア情報検索</h1>
  <hr align="center" noshade width="80%"/>
  <div align="center">

    <form method="post" action="yurukyara.erb">
      <input type="text" name="YURUKYARA" size="15"/>
      <button type="submit" value="検索" class="btn btn-default">距離ソート</button>
    </form>

    <a href = "./pagerank.erb"> ページランクソート </a>

  </div>

  <hr align="center" noshade width="80%"/>

  <div class="container">
    <div class="table-responsive">
      <table class="table table-striped" border="1" align="center">
        <thead>
          <tr>
            <th>ID</th><th>name</th><th>pref</th><th>area</th><th>url</th><th>ido</th><th>keido</th><th>PageRank</th>
          </tr>
        </thead>
        <tbody>
          <% yurukyaras.each do |i| %>
          <tr>
            <td><%= i.id %></td>
            <td><%= i.name %></td>
            <td><%= i.pref %></td>
            <td><%= i.area %></td>
            <td><%= i.url %></td>
            <td><%= i.ido %></td>
            <td><%= i.keido %></td>
            <td><%= i.pagerank %></td>
          </tr>
          <% end %>

          <form method="post" action='new_yurukyara'>
            <tr>
              <td><input type="string" name="id"></td>
              <td><input type="string" name="name"></td>
              <td><input type="string" name="pref"></td>
              <td><input type="text" name="area"></td>
              <td><input type="text" name="url"></td>
              <td><input type="text" name="ido"></td>
              <td><input type="text" name="keido"></td>
              <td><input type="submit" value="登録"></td>
            </tr>
          </form>
        </tbody>
      </table>
    </div>
  </div>

  <hr align="center" noshade width="80%"/>
  <div align="center">
    <a href = "./"> 戻る </a>
  </div>

</body>
</html>
