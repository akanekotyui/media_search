db = SQLite3::Database.new("image.db")
db.transaction{
db.execute("select * from image where name like ?;",keyword){|row|
print(CGI.escapeHTML(row[0]),"::",CGI.escapeHTML(row[1]),"::",CGI.escapeHTML(row[2]),"\n")
}
}

db.close
