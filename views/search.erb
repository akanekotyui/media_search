<body bgcolor="white" text="black">

<h1 align="center">検索結果</h1>
<hr align="center" noshade width="80%"/>
<div align="center">

  <%= @keyword %>

<% db = SQLite3::Database.new 'image.db' %>
 <% db.transaction{ %>
<%   db.execute("select * from image where title like ?;",@keyword){ %>
<%     |row|print(CGI.escapeHTML(row[0]),"::",CGI.escapeHTML(row[1]),"::",CGI.escapeHTML(row[2]),"\n") }}%>

<% db.close %>
